<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="382dp"
        android:layout_height="101dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textCardNumber"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="308dp"
        android:text="1234 56** *** 9098"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textCardNumber2"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_marginBottom="40sp" />

    <TextView
        android:id="@+id/textCardNumber2"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginStart="8dp"
        android:text="Balance LKR 29 567.00"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_marginBottom="40sp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="388dp"
        android:text="Kamal Perera"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textCardNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:clickable="true"
        android:src="@drawable/add_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/button3"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="272dp"
        android:text="Add Credit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>